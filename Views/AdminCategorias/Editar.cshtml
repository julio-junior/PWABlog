
@if (@Model.Erro != null) {
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Erro!</h5>
        @Model.Erro
    </div>
}

<form action="/admin/categorias/editar" method="post">
    <input type="hidden" name="Id" value="@Model.IdCategoria">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Editar</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <label for="nome">Nome</label>
                <input type="text" name="Nome" id="nome" value="@Model.NomeCategoria" class="form-control">
            </div>
            <div class="form-group mb-3">
                <a href="/admin/categorias" class="btn btn-success">Voltar</a>
                <button class="btn btn-success float-right" type="submit">Editar</button>
            </div>
        </div>
    </div>
</form>