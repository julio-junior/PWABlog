<div class="card">
    <div class="card-header">
        <h3 class="card-title">Remoção de Autor</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i></button>
        </div>
    </div>
    <div class="card-body">
        @if (@Model.Erro != null) {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Erro!</h5>
                @Model.Erro
            </div>
        }

        <form action="/admin/autores/remover" method="post">
            <div class="form-group mb-3">
                <p class="text-center">
                    Deseja mesmo remover o autor <strong>@Model.NomeAutor</strong>?
                </p>
            </div>
            <div class="form-group mb-3">
                <input type="hidden" name="Id" value="@Model.IdAutor">
                <button type="submit" class="btn btn-danger btn-sm float-right"><span class="fa fa-check"></span> Confirmar</button>
                <a class="btn btn-primary btn-sm" href="/admin/autores"><span class="fa fa-close"></span> Cancelar</a>
            </div>
        </form>
    </div>
</div>